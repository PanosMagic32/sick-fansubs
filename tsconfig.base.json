{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@sick/api/blog-post": ["libs/api/blog-post/src/index.ts"],
      "@sick/api/project": ["libs/api/project/src/index.ts"],
      "@sick/api/user": ["libs/api/user/src/index.ts"],
      "@sick/client/about": ["libs/client/about/src/index.ts"],
      "@sick/client/auth": ["libs/client/auth/src/index.ts"],
      "@sick/client/home": ["libs/client/home/src/index.ts"],
      "@sick/client/home/home": ["libs/client/home/src/index.ts"],
      "@sick/client/projects": ["libs/client/projects/src/index.ts"],
      "@sick/client/rules": ["libs/client/rules/src/index.ts"],
      "@sick/client/shell": ["libs/client/shell/src/index.ts"],
      "@sick/material": ["libs/material/src/index.ts"],
      "@sick/shared": ["libs/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
