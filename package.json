{
  "name": "sick",
  "version": "0.7.8",
  "license": "MIT",
  "scripts": {
    "ng": "nx",
    "start": "nx serve",
    "start:fe": "nx serve sick-fansubs",
    "start:be": "nx serve api",
    "dev": "nx run-many --target=serve --projects=api,sick-fansubs --parallel",
    "build": "nx build",
    "build:all": "nx run-many --target=build --projects=api,sick-fansubs --parallel --prod --skip-nx-cache",
    "test": "nx test",
    "lint-staged": "lint-staged --allow-empty",
    "deploy:docker": "pnpm run build:all && cp .env dist/apps/api/ && cp .env dist/apps/sick-fansubs/ && cp .config.json dist/apps/sick-fansubs/ && docker compose up",
    "prepack": "rm -rf dist/ && pnpm run build:all",
    "pack": "docker compose up -d --always-recreate-deps --force-recreate",
    "prepare": "husky install",
    "format:check": "prettier apps/**/*.{ts,html,scss,json} libs/**/*.{ts,html,scss,json} --check",
    "format:fix": "prettier apps/**/*.{ts,html,scss,json} libs/**/*.{ts,html,scss,json} --write",
    "pretty-quick": "pretty-quick --pattern \"**/*.*(js|ts|css|scss|html)\" --staged"
  },
  "husky": {
    "hooks": "pnpm run format:fix && npx validate-branch-name && npx lint-staged"
  },
  "validate-branch-name": {
    "pattern": "^(main|develop){1}$|^(feature|bugfix|hotfix|release)-.+$/g",
    "errorMsg": "Branch name has to be main or develop or has to start with feature-, bugfix-, hotfix- or release-"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        1,
        "always",
        100
      ]
    }
  },
  "lint-staged": {
    "*.{ts,js,html,css,scss,less,md,json}": "prettier --write --ignore-unknown"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~18.2.5",
    "@angular/cdk": "~18.2.5",
    "@angular/common": "~18.2.5",
    "@angular/compiler": "~18.2.5",
    "@angular/core": "~18.2.5",
    "@angular/forms": "~18.2.5",
    "@angular/material": "~18.2.5",
    "@angular/platform-browser": "~18.2.5",
    "@angular/platform-browser-dynamic": "~18.2.5",
    "@angular/router": "~18.2.5",
    "@nestjs/common": "^10.4.3",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.3",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.10",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.3",
    "@nestjs/swagger": "^7.4.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "mongoose": "^7.8.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.7.0",
    "zone.js": "^0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~18.2.5",
    "@angular-devkit/core": "~18.2.5",
    "@angular-devkit/schematics": "~18.2.5",
    "@angular-eslint/eslint-plugin": "~18.0.1",
    "@angular-eslint/eslint-plugin-template": "~18.0.1",
    "@angular-eslint/template-parser": "~18.0.1",
    "@angular/cli": "~18.1.4",
    "@angular/compiler-cli": "~18.2.5",
    "@angular/language-service": "~18.2.5",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.3",
    "@nx/angular": "19.8.0",
    "@nx/cypress": "19.8.0",
    "@nx/eslint": "19.8.0",
    "@nx/eslint-plugin": "19.8.0",
    "@nx/jest": "19.8.0",
    "@nx/nest": "19.8.0",
    "@nx/node": "19.8.0",
    "@nx/workspace": "19.8.0",
    "@schematics/angular": "~18.2.5",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "~29.5.13",
    "@types/node": "^20.16.5",
    "@types/passport-jwt": "^3.0.13",
    "@types/passport-local": "^1.0.38",
    "@typescript-eslint/eslint-plugin": "~7.18.0",
    "@typescript-eslint/parser": "~7.18.0",
    "@typescript-eslint/utils": "~7.18.0",
    "cypress": "~13.13.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^2.15.2",
    "husky": "^9.1.6",
    "jest": "~29.7.0",
    "jest-environment-jsdom": "~29.7.0",
    "jest-preset-angular": "^14.2.4",
    "lint-staged": "^13.3.0",
    "nx": "19.8.0",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~5.5.4",
    "validate-branch-name": "^1.3.1"
  }
}
